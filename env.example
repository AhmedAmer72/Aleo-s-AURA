# Aura Protocol - Environment Configuration
# Copy this file to .env and update values as needed

# Aleo Network Configuration
VITE_ALEO_NETWORK=testnet
VITE_ALEO_API_URL=https://api.explorer.provable.com/v1/testnet

# Program IDs
VITE_AURA_PROGRAM_ID=aura_protocol.aleo
VITE_CREDITS_PROGRAM_ID=credits.aleo

# Development Settings
VITE_ENABLE_MOCK_VERIFICATION=true
VITE_ENABLE_DEV_TOOLS=true

# Analytics (optional)
VITE_POSTHOG_KEY=
VITE_POSTHOG_HOST=

# Feature Flags
VITE_ENABLE_LENDING=true
VITE_ENABLE_MULTI_VERIFICATION=true
